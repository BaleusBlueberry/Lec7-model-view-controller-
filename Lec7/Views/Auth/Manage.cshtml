@model ManageViewModel

@{
    ViewData["Title"] = "Manage Page";
    string username = ViewBag.UserName ?? "";
}

<h1>Edit Your Profile</h1>

<div class="row">
    <form asp-action="Manage" method="post">
        <div class="form-group">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="NewPassword"></label>
            <input class="form-control" type="password" asp-for="NewPassword" />
            <span asp-validation-for="NewPassword"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Language"></label>
            <input class="form-control" asp-for="Language" />
            <span asp-validation-for="Language"></span>
        </div>
    </form>
    <button class="btn btn-primary mt-2" type="submit">Save Changes</button>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}